{
  "$schema": "https://turborepo.com/schema.json",
  "pipeline": {
    "api": {
      "env": ["JWT_TOKEN"]
    },
    "web": {
      "env": ["NEXT_PUBLIC_HTTP_BACKEND", "JWT_TOKEN"]
    }
  },
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
